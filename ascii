## must reflect the name and
## number of messages
OPTS=(DIK GTFO DRAGON FUX FINGER SIMPSONS BOO)
NUM="${#OPTS[@]}"

rando() {
    MSG="${OPTS[$RANDOM%${NUM}]}"
    echo "${!MSG}"
}
